<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #37598e;"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cz.vse.tymovanicko.main.ProfileSettingsController">
    <center>
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="450.0">
            <padding>
                <Insets left="10.0" right="20.0" top="10.0"/>
            </padding>
            <children>
                <Label text="Profil" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="22.0"/>
                    </font>
                </Label>
                <Label text="Jméno:" textFill="WHITE">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <TextField fx:id="jmeno" promptText="Jméno">
                    <VBox.margin>
                        <Insets bottom="10.0" top="2.0"/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                    </padding>
                </TextField>
                <Label text="Příjmení:" textFill="WHITE">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <TextField fx:id="prijmeni" promptText="Příjmení">
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets bottom="10.0" top="2.0"/>
                    </VBox.margin>
                </TextField>
                <Label text="Email:" textFill="WHITE">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <TextField fx:id="email" promptText="email@enail.cz">
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets bottom="10.0" top="2.0"/>
                    </VBox.margin>
                </TextField>
                <Label text="Role:" textFill="WHITE">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <ChoiceBox prefWidth="150.0">
                    <VBox.margin>
                        <Insets bottom="10.0" top="2.0"/>
                    </VBox.margin>
                </ChoiceBox>
                <Label text="Heslo:" textFill="WHITE">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <PasswordField fx:id="heslo" promptText=" ● ● ● ● ● ●">
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets bottom="1.0" top="2.0"/>
                    </VBox.margin>
                </PasswordField>
                <HBox alignment="CENTER" spacing="50.0">
                    <children>
                        <Button fx:id="uloz" mnemonicParsing="false" onAction="#zpracujUlozeni" text="Uložit">
                            <font>
                                <Font size="14.0"/>
                            </font>
                            <padding>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </padding>
                        </Button>
                        <Button fx:id="odhlas" mnemonicParsing="false" onAction="#zpracujOdhlaseni" text="Odhlásit se">
                            <font>
                                <Font size="14.0"/>
                            </font>
                            <padding>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </padding>
                        </Button>
                        <Button fx:id="zmenHeslo" mnemonicParsing="false" onAction="#zpracujNaZmenuHesla"
                                text="Změna hesla">
                            <font>
                                <Font size="14.0"/>
                            </font>
                            <padding>
                                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                            </padding>
                        </Button>
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" top="20.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </center>
    <top>
        <Label text="Týmováníčko" textFill="WHITE" BorderPane.alignment="TOP_LEFT">
            <font>
                <Font name="System Bold" size="22.0"/>
            </font>
            <padding>
                <Insets bottom="10.0" left="20.0" top="20.0"/>
            </padding>
        </Label>
    </top>
    <left>
        <VBox spacing="50.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fx:id="udalosti" fitHeight="150.0" fitWidth="50.0" onMouseClicked="#zpracujNaUdalosti" onMouseEntered="#ztmavniKalendar"
                           onMouseExited="#zesvetlejKalendar" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@calendar_white.png"/>
                    </image>
                </ImageView>
                <ImageView fx:id="chat" fitHeight="150.0" fitWidth="50.0" onMouseClicked="#zpracujNaChat"
                           onMouseEntered="#ztmavniChat" onMouseExited="#zesvetlejChat" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@chat_white.png"/>
                    </image>
                </ImageView>
                <ImageView blendMode="SOFT_LIGHT" fitHeight="150.0" fitWidth="50.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@setting_white.png"/>
                    </image>
                </ImageView>
                <ImageView fx:id="zpet" fitHeight="45.0" fitWidth="50.0" onMouseClicked="#zpracujZpatky"
                           onMouseEntered="#ztmavni" onMouseExited="#zesvetlej" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@arrow_white.png"/>
                    </image>
                    <VBox.margin>
                        <Insets left="8.0"/>
                    </VBox.margin>
                </ImageView>
            </children>
            <padding>
                <Insets bottom="30.0" left="40.0" right="30.0" top="30.0"/>
            </padding>
        </VBox>
    </left>
</BorderPane>
