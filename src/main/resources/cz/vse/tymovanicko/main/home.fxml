<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0"
      prefWidth="600.0" spacing="30.0" style="-fx-background-color: #37598e;" xmlns="http://javafx.com/javafx/18"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.vse.tymovanicko.main.HomeController">
    <children>
        <Label text="Týmováníčko" textFill="WHITE">
            <font>
                <Font name="System Bold" size="22.0"/>
            </font>
        </Label>
        <HBox spacing="50.0">
            <children>
                <VBox spacing="50.0">
                    <children>
                        <ImageView fx:id="kalendar" fitHeight="150.0" fitWidth="50.0" onMouseEntered="#ztmavniKalendar"
                                   onMouseExited="#zesvetlejKalendar" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@calendar_white.png"/>
                            </image>
                        </ImageView>
                        <ImageView fx:id="chat" fitHeight="150.0" fitWidth="50.0" onMouseClicked="#zpracujNaChat"
                                   onMouseEntered="#ztmavniChat" onMouseExited="#zesvetlejChat" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@chat_white.png"/>
                            </image>
                        </ImageView>
                        <ImageView fx:id="nastaveni" fitHeight="150.0" fitWidth="50.0"
                                   onMouseClicked="#zpracujNaNastaveni" onMouseEntered="#ztmavniNastaveni"
                                   onMouseExited="#zesvetlejNastaveni" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@setting_white.png"/>
                            </image>
                        </ImageView>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </VBox>
                <VBox spacing="10.0">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <children>
                        <ImageView fitWidth="420.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@tymovanicko.jpg"/>
                            </image>
                        </ImageView>
                        <Label text="Členové týmu:" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="16.0"/>
                            </font>
                        </Label>
                        <ListView/>
                    </children>
                </VBox>
            </children>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0"/>
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>
