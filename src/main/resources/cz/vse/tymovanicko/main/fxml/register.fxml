<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #37598e;"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cz.vse.tymovanicko.main.RegisterController">
    <center>
        <GridPane alignment="CENTER" hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                  minWidth="-Infinity" prefHeight="450.0" prefWidth="600.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <padding>
                <Insets bottom="10.0" left="40.0" right="40.0" top="10.0"/>
            </padding>
            <children>
                <Label text="Jméno:" textFill="WHITE">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <TextField fx:id="jmeno" onAction="#zpracujZaregistrovani" promptText="Jméno" GridPane.columnIndex="1">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </TextField>
                <Label text="Příjmení:" textFill="WHITE" GridPane.rowIndex="1">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <TextField fx:id="prijmeni" onAction="#zpracujZaregistrovani" promptText="Příjmení" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </TextField>
                <Label text="Email:" textFill="WHITE" GridPane.rowIndex="2">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <TextField fx:id="email" onAction="#zpracujZaregistrovani" promptText="email@email.cz" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </TextField>
                <Label text="Heslo:" textFill="WHITE" GridPane.rowIndex="3">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <PasswordField fx:id="heslo" onAction="#zpracujZaregistrovani" promptText=" ● ● ● ● ● ●" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </PasswordField>
                <Label text="Potvrzení hesla:" textFill="WHITE" GridPane.rowIndex="4">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <PasswordField fx:id="potvrzeniHesla" onAction="#zpracujZaregistrovani" promptText=" ● ● ● ● ● ●" GridPane.columnIndex="1"
                               GridPane.rowIndex="4">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </PasswordField>
                <Button fx:id="zaregistruj" mnemonicParsing="false" onAction="#zpracujZaregistrovani"
                        text="Zaregistrovat se" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                        GridPane.rowIndex="5">
                    <padding>
                        <Insets bottom="10.0" left="50.0" right="50.0" top="10.0"/>
                    </padding>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
            </children>
        </GridPane>
    </center>
    <top>
        <HBox BorderPane.alignment="CENTER">
            <children>
                <ImageView fx:id="zpet" fitHeight="30.0" fitWidth="50.0" onMouseClicked="#zpracujZpatky"
                           onMouseEntered="#ztmavni" onMouseExited="#zesvetlej" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../arrow_white.png"/>
                    </image>
                    <HBox.margin>
                        <Insets bottom="10.0" left="15.0" top="15.0"/>
                    </HBox.margin>
                </ImageView>
                <Label text="Registrace" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="22.0"/>
                    </font>
                    <padding>
                        <Insets left="20.0" right="20.0" top="15.0"/>
                    </padding>
                </Label>
            </children>
        </HBox>
    </top>
</BorderPane>
