<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0"
            prefWidth="600.0" style="-fx-background-color: #37598e;" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.vse.tymovanicko.main.LoginController">
    <center>
        <GridPane alignment="CENTER" hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                  minWidth="-Infinity" prefHeight="150.0" prefWidth="400.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <padding>
                <Insets bottom="10.0" top="25.0"/>
            </padding>
            <children>
                <Label text="Email:" textFill="WHITE">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <TextField fx:id="email" prefHeight="25.0" prefWidth="206.0" promptText="email@email.cz" onAction="#zpracujPrihlaseni"
                           GridPane.columnIndex="1"/>
                <Label text="Heslo:" textFill="WHITE" GridPane.rowIndex="1">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <PasswordField fx:id="password" promptText=" ● ● ● ● ● ●" onAction="#zpracujPrihlaseni" GridPane.columnIndex="1"
                               GridPane.rowIndex="1"/>
                <Button fx:id="prihlasit" mnemonicParsing="false" onAction="#zpracujPrihlaseni" text="Přihlásit se"
                        GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2">
                    <padding>
                        <Insets bottom="5.0" left="30.0" right="30.0" top="5.0"/>
                    </padding>
                    <GridPane.margin>
                        <Insets top="20.0"/>
                    </GridPane.margin>
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Button>
            </children>
        </GridPane>
    </center>
    <top>
        <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true"
                   BorderPane.alignment="CENTER">
            <image>
                <Image url="@tymovanicko.jpg"/>
            </image>
        </ImageView>
    </top>
    <bottom>
        <HBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label prefHeight="25.0" text="Nemáte založený účet?" textFill="WHITE"/>
                <Button fx:id="zaregistrovat" mnemonicParsing="false" onAction="#zpracujNaZaregistrovani"
                        text="Zaregistrujte se">
                    <padding>
                        <Insets bottom="4.0" left="8.0" right="8.0" top="4.0"/>
                    </padding>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>
