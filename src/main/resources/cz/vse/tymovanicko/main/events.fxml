<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #37598e;"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cz.vse.tymovanicko.main.EventsController">
    <top>
        <BorderPane BorderPane.alignment="TOP_LEFT">
            <left>
                <Label text="Týmováníčko" textFill="WHITE" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="System Bold" size="22.0"/>
                    </font>
                    <padding>
                        <Insets bottom="10.0" left="20.0" top="20.0"/>
                    </padding>
                </Label>
            </left>
            <right>
                <Button mnemonicParsing="false" text="Vytvořit událost" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                    </padding>
                    <BorderPane.margin>
                        <Insets right="20.0" top="20.0"/>
                    </BorderPane.margin>
                </Button>
            </right>
        </BorderPane>
    </top>
    <left>
        <VBox spacing="50.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView blendMode="SOFT_LIGHT" fitHeight="150.0" fitWidth="50.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@calendar_white.png"/>
                    </image>
                </ImageView>
                <ImageView fx:id="chat" fitHeight="150.0" fitWidth="50.0" onMouseClicked="#zpracujNaChat"
                           onMouseEntered="#ztmavniChat" onMouseExited="#zesvetlejChat" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@chat_white.png"/>
                    </image>
                </ImageView>
                <ImageView fx:id="nastaveni" onMouseClicked="#zpracujNaNastaveni" onMouseEntered="#ztmavniNastaveni"
                           onMouseExited="#zesvetlejNastaveni" fitHeight="150.0" fitWidth="50.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@setting_white.png"/>
                    </image>
                </ImageView>
                <ImageView fx:id="zpet" fitHeight="45.0" fitWidth="50.0" onMouseClicked="#zpracujZpatky"
                           onMouseEntered="#ztmavni" onMouseExited="#zesvetlej" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@arrow_white.png"/>
                    </image>
                    <VBox.margin>
                        <Insets left="8.0"/>
                    </VBox.margin>
                </ImageView>
            </children>
            <padding>
                <Insets bottom="30.0" left="40.0" right="30.0" top="30.0"/>
            </padding>
        </VBox>
    </left>
    <center>
        <ListView fx:id="panelUdalosti" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="20.0" left="10.0" right="20.0" top="20.0"/>
            </BorderPane.margin>
        </ListView>
    </center>
</BorderPane>
